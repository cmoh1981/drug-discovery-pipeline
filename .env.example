# Drug Discovery SaaS Platform - Environment Configuration
# Copy to .env and fill in your values

# Security - CHANGE THIS in production!
SECRET_KEY=change-me-to-a-random-64-char-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database (SQLite for single-server, PostgreSQL for scale)
DATABASE_URL=sqlite:///./drugdiscovery_service.db

# Pipeline
PIPELINE_OUTPUT_DIR=job_results
MAX_CONCURRENT_JOBS=2

# RunPod GPU compute (optional)
RUNPOD_API_KEY=

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*
